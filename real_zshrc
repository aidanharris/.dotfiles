checkupdates() {
  if env which checkupdates &> /dev/null
  then
    UPDATES="$(env checkupdates)"
    if [[ "$UPDATES" != "" ]]
    then
      echo "Updates:\n$UPDATES"
    fi
  fi
}

checkupdates &

