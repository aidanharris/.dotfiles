# Use it like this:
# echo "/path/to/wallpaper.jpg | awesome-wallpaper
awesome-wallpaper() {
  xargs -I '{}' echo "local gears = require(\"gears\") gears.wallpaper.maximized(\"{}\", s, true)" | awesome-client
}

diff() {
  colordiff "$@" 2>&/dev/null || env diff "$@"
}

